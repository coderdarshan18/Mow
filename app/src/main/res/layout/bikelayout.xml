<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/main_white"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <ImageView
        android:id="@+id/bikeImg"
        android:layout_width="119dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/skip_button"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mow" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Bike Name"
        android:textColor="@color/main_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/bikeImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="club road"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="4.6"
        android:textSize="12sp"
        android:padding="6dp"
        android:textColor="@color/main_white"
        android:background="@drawable/skip_button"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toEndOf="@+id/bikeImg"
        app:layout_constraintTop_toBottomOf="@+id/location" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Medium"
        app:layout_constraintStart_toEndOf="@+id/radioButton"
        app:layout_constraintTop_toBottomOf="@+id/location"
        tools:ignore="MissingConstraints" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Large"
        app:layout_constraintStart_toEndOf="@+id/radioButton2"
        app:layout_constraintTop_toBottomOf="@+id/location"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="30dp"
        android:layout_height="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="912.00"
        android:textSize="5sp"
        app:layout_constraintStart_toEndOf="@+id/bikeImg"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="30dp"
        android:layout_height="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="120/km"
        android:textSize="6sp"
        app:layout_constraintStart_toEndOf="@+id/bikeImg"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="60dp"
        android:layout_height="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="10.00 for extra km"
        android:textSize="6sp"
        app:layout_constraintStart_toEndOf="@+id/bikeImg"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="30dp"
        android:layout_height="8dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="150.00"
        android:textSize="5sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/radioButton2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="30dp"
        android:layout_height="8dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:text="180km"
        android:textSize="5sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="59dp"
        android:layout_height="7dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="15.00 for extra km"
        android:textSize="5sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="30dp"
        android:layout_height="8dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="250.00"
        android:textSize="5sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/radioButton3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="30dp"
        android:layout_height="8dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:text="200km"
        android:textSize="5sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="50dp"
        android:layout_height="7dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="20.00 for extra km"
        android:textSize="5sp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:text="Book"

        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toEndOf="@+id/bikeImg"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />
</androidx.constraintlayout.widget.ConstraintLayout>